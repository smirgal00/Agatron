<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_bus_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lenovo.agatron.ascuns.BusPage">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <Button
            android:text="CONFIRMA PLATA"
            android:textColor="@color/colorBlack"
            android:id="@+id/cumpara"
            android:background="@android:drawable/btn_default_small"
            android:textStyle="normal|bold"
            android:textSize="24sp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_width="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="24dp"
            android:onClick="confirm" />

        <TextView
            android:text="Achizitionarea biletelor de calatorie prin aplicatie va duce la generarea unui cost suplimentar in valoare de 2,50 LEI."
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:textColor="@color/colorBlack"
            android:textSize="20sp"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent" />


    </android.support.constraint.ConstraintLayout>

</RelativeLayout>
