<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_bus_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lenovo.agatron.ascuns.BusPage">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">


        <TextView
            android:text="BILETE ACTIVE:"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:textColor="@color/colorBlack"
            android:textSize="26sp"
            android:textStyle="bold"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:textAlignment="center" />

        <TextView
            android:text="---"
            android:layout_width="344dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView13"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            android:textAlignment="center"
            android:textStyle="normal|bold"
            android:textSize="16sp"
            android:textColor="@color/colorRed"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:text="ISTORIC BILETE:"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView266"
            android:textColor="@color/colorBlack"
            android:textSize="26sp"
            android:textStyle="bold"
            android:layout_marginTop="64dp"
            app:layout_constraintTop_toBottomOf="@+id/textView13"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:textAlignment="center" />

        <TextView
            android:text="---"
            android:layout_width="344dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView543"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/textView266"
            android:textAlignment="center"
            android:textStyle="normal|bold"
            android:textSize="16sp"
            android:textColor="@color/colorRed"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent" />

    </android.support.constraint.ConstraintLayout>

</RelativeLayout>
